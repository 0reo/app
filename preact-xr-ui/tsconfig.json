{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dev", "build"]
}